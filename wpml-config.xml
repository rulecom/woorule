<wpml-config>
  <custom-fields>
    <custom-field action="ignore">woorule_opt_in</custom-field>
  </custom-fields>
  <admin-texts>
    <key name="woocommerce_rulemailer_settings">
      <key name="woorule_checkout_label"/>
      <key name="woorule_alert_label"/>
      <key name="woorule_alert_success"/>
      <key name="woorule_alert_error"/>
      <key name="woorule_alert_placeholder"/>
      <key name="woorule_alert_button"/>
    </key>
  </admin-texts>
  <shortcodes>
    <shortcode>
      <tag>woorule</tag>
      <attributes>
        <attribute>title</attribute>
        <attribute>submit</attribute>
        <attribute>placeholder</attribute>
        <attribute>success</attribute>
        <attribute>error</attribute>
      </attributes>
    </shortcode>
  </shortcodes>
</wpml-config>